<div class="flex justify-center gap-20 py-10">
  <div class="flex flex-wrap max-w-lg">
    <% @product.images.each do |image| %>
      <%= image_tag image.url, class: "w-48 h-48 object-cover" %>
    <% end %>
  </div>

  <div data-controller="products" data-products-product-value="<%= @product.to_json %>" class="flex flex-col items-start max-w-md p-6 bg-white shadow-lg rounded-lg space-y-6">
  <h2 class="font-bold text-4xl uppercase text-gray-800"><%= @product.name %></h2>
  <p class="text-2xl text-gray-700">
    <span class="font-bold">Precio:</span> $<%= (@product.price).to_s %>
  </p>
  <div class="py-4">
    <p class="text-lg font-bold text-gray-800">Descripción:</p>
    <p class="text-md text-gray-700"><%= @product.description %></p>
  </div>
  <div class="my-6">
    <p class="uppercase text-lg font-bold text-gray-800 mb-4">Tamaño</p>
    <div class="flex flex-wrap gap-2">
      <% @product.stocks.each do |stock| %>
        <% if stock.amount > 0 %>
          <button data-action="click->products#selectSize" value="<%= stock.size %>" class="bg-gray-200 text-gray-800 font-semibold py-2 px-4 rounded hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
            <%= stock.size %>
          </button>
        <% else %>
          <button disabled value="<%= stock.size %>" class="disabled:bg-gray-400 bg-gray-200 text-gray-800 font-semibold py-2 px-4 rounded hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
            <%= stock.size %>
          </button>
        <% end %>
      <% end %>
    </div>
  </div>
  <div id="selected-size" class="text-md text-gray-800 font-medium"></div>
  <button data-action="click->products#addToCart" class="inline-flex items-center justify-center px-5 py-3 border border-transparent font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">Agregar al carrito</button>
</div>
