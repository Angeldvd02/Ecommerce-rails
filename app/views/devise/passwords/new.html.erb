<div class="flex items-center justify-center">
  <div class="max-w-md w-full mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-center mb-4">¿Olvidaste tú contraseña?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email,"Correo", class: "block text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="text-center">
        <%= f.submit "Enviar instrucciones", class: "w-full bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:bg-blue-600 transition duration-300" %>
      </div>
    <% end %>
  </div>
</div>

