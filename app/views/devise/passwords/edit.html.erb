<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="max-w-md w-full mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-center mb-4">Cammbiar contraseña</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, "Contraseña", class: "block text-gray-700" %>
        <% if @minimum_password_length %>
          <em class="text-gray-600 text-sm">(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autocomplete: "Nueva contraseña", class: "w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Repetir contraseña", class: "block text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="text-center">
        <%= f.submit "Cambiar contraseña", class: "w-full bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:bg-blue-600 transition duration-300" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
