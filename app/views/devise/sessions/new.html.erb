<div class="container mx-auto p-6 mt-20 max-w-lg">
  <div class="bg-white shadow-lg rounded-lg p-8">
    <h2 class="text-2xl font-bold text-center mb-6">Bienvenido</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
      <div class="space-y-1">
        <%= f.label :email,"Correo", class: 'block text-sm font-medium text-gray-700' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
      </div>
      
      <div class="space-y-1">
        <%= f.label :password,"Contraseña", class: 'block text-sm font-medium text-gray-700' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
      </div>
      
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: 'h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500' %>
          <%= f.label :Recordar_usuario, class: 'ml-2 block text-sm text-gray-900' %>
        </div>
      <% end %>
      
      <div>
        <%= f.submit "Iniciar sesión", class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      </div>
    <% end %>
    
    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>




