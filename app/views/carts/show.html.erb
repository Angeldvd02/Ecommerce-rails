<div class="flex items-center justify-center min-h-screen">
  <div class="flex w-full max-w-lg p-6 shadow-lg rounded-lg bg-white">
    <!-- Contenedor de la imagen a la izquierda -->
    <div class="flex-shrink-0 mr-6">
      <%= image_tag 'carro-de-la-compra.png', class: "h-48 w-48" %>
    </div>

    <!-- Contenedor de la informaciÃ³n del carrito a la derecha -->
    <div class="flex flex-col justify-center">
      <h1 class="font-bold text-xl mb-4">Tu carrito</h1>
      <div id="errorContainer" class="mb-4"></div>
      <div data-controller="cart" class="w-full">
        <div class="mt-4 font-medium text-lg text-gray-700" id="total"></div>
        <div class="mt-6 flex gap-4">
          <button class="flex-1 py-2 px-4 bg-blue-600 hover:bg-blue-700 rounded text-white flex items-center justify-center transition duration-300" data-action="click->cart#checkout">
            <i class="fas fa-credit-card mr-2"></i> Pagar
          </button>
          <button class="flex-1 py-2 px-4 bg-gray-600 hover:bg-gray-700 rounded text-white flex items-center justify-center transition duration-300" data-action="click->cart#clear">
            <i class="fas fa-trash mr-2"></i> Limpiar
          </button>
        </div>
      </div>
    </div>
  </div>
</div>






