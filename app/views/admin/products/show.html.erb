<div class="mx-auto md:w-2/3 w-full flex justify-center">
  <div class="mx-auto bg-white rounded-lg shadow-lg p-8">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block shadow-md" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_product %>
    <%= link_to "Editar", edit_admin_product_path(@admin_product), class: "mt-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
    <div class="inline-block ml-2">
    <%= button_to "Eliminar", admin_product_path(@admin_product), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-200 font-medium" %>
    </div>
    <%= link_to "Regresar", admin_products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
  </div>
</div>


