<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Presentaciones disponibles</h1>
    <%= link_to "Agregar", new_admin_product_stock_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="flex flex-col w-full">
  <div class="overlow-x-auto sm:mx-0.5 lg:mx-0.5">
    <div class="py-2 inline-block min-w-full">
      <div class="overlow-x-auto">
        <table class="min-w-full overflow-x-scroll">
          <thead class="bg-white border-b">
            <tr>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Presentacion
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Cantidad 
              </th>
              <th scope="row" class="text-sm font-medium text-gray-800 px-6 py-4 text-left" rowspan=""></th>
              <th scope="row" class="text-sm font-medium text-gray-800 px-6 py-4 text-left" rowspan=""></th>
              <th scope="row" class="text-sm font-medium text-gray-800 px-6 py-4 text-left" rowspan=""></th>
            </tr>
          </thead>
          <tbody>
            <% @admin_stocks.each do |c| %>
              <tr class="bg-gray-50 border-b">
                <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800">
                  <%= c.size %>
                </td>
                <td class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800">
                  <%= c.amount %>
                </td>
                <td scope="row" class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800" colspan="3">
                  <%= link_to "Mostrar", [:admin, c.product, c], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
                </td>
                <td scope="row" class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800" colspan="3">
                  <%= link_to "Editar", edit_admin_product_stock_path(c.product, c), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
                </td>
                <td scope="row" class="px-6 py-4 whitepsace-nowrap tex-sm font-medium text-gray-800" colspan="3">
                  <%= button_to "Eliminar", admin_product_stock_path(c.product, c), method: :delete, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
